# Template for Action

'.source.c, .source.cpp':
  'MOOSE action':
    'prefix': 'action-h'
    'body': """
    #ifndef ${1/(.)/\\U$1/}_H
    #define ${1/(.)/\\U$1/}_H

    #include "Action.h"

    class ${1};

    template <>
    InputParameters
    validParams<${1}>();

    /**
     *
     */
    class ${1} : public Action
    {
    public:
      ${1}(const InputParameters& parameters);

      virtual void act() override;
    };

    #endif // ${1/(.)/\\U$1/}_H
    """

  'MOOSE action implementation':
    'prefix': 'action-c'
    'body': """
    #include "${1}.h"

    registerMooseAction("${2}", ${1}, "${3}");

    template <>
    InputParameters
    validParams<${1}>()
    {
      InputParameters params = validParams<Action>();
      return params;
    }

    ${1}::${1}(const InputParameters & parameters)
      : Action(parameters)
    {
    }

    void
    ${1}::act()
    {
    }
    """
