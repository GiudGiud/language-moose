# Template for Kernel

'.source.c, .source.cpp':
  'MOOSE kernel header':
    'prefix': 'kernel-h'
    'body': """
    #ifndef ${1}_H
    #define ${1}_H

    #include "Kernel.h"

    class ${2};

    template<>
    InputParameters validParams<${2}>();

    /**
     *
     */
    class ${2} : public Kernel
    {
    public:
      ${2}(const InputParameters & parameters);

    protected:
      virtual Real computeQpResidual() override;
      virtual Real computeQpJacobian() override;
    };

    #endif // ${1}_H
    """

  'MOOSE kernel implementation':
    'prefix': 'kernel-c'
    'body': """
    #include "${1}.h"

    registerMooseObject("${2}", ${1});

    template<>
    InputParameters validParams<${1}>()
    {
      InputParameters params = validParams<Kernel>();
      params.addClassDescription("");
      return params;
    }

    ${1}::${1}(const InputParameters & parameters)
      : Kernel(parameters)
    {
    }

    Real
    ${1}::computeQpResidual()
    {
    }

    Real
    ${1}::computeQpJacobian()
    {
      return 0;
    }
    """

  'MOOSE vectorkernel header':
    'prefix': 'vectorkernel-h'
    'body': """
    #ifndef ${1}_H
    #define ${1}_H

    #include "VectorKernel.h"

    class ${2};

