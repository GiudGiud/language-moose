    registerMooseObject("${2}", ${1});

    template <>
    InputParameters
    validParams<${1}>()
    {
      InputParameters params = validParams<MeshModifier>();
      params.addClassDescription("");
      return params;
    }

    ${1}::${1}(const InputParameters & parameters)
      : MeshModifier(parameters)
    {
    }

    void
    ${1}::modify()
    {
    }
    """
