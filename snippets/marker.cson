# Template for Marker

'.source.c, .source.cpp':
  'MOOSE marker header':
    'prefix': 'marker-h'
    'body': """
    #ifndef ${1}_H
    #define ${1}_H

    #include "Marker.h"

    class ${2};

    template<>
    InputParameters validParams<${2}>();

    /**
     *
     */
    class ${2} : public Marker
    {
    public:
      ${2}(const InputParameters & parameters);

    protected:
      virtual MarkerValue computeElementMarker() override;
    };

    #endif // ${1}_H
    """

  'MOOSE marker implementation':
    'prefix': 'marker-c'
    'body': """
    #include "${1}.h"

    registerMooseObject("${2}", ${1});

    template<>
    InputParameters validParams<${1}>()
    {
      InputParameters params = validParams<Marker>();
      params.addClassDescription("");
      return params;
    }

    ${1}::${1}(const InputParameters & parameters)
      : Marker(parameters)
    {
    }

    Marker::MarkerValue
    ${1}::computeElementMarker()
    {
    }
    """
